{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "rootDir": ".",
    "outDir": "../../.tsbuild/app",
    "tsBuildInfoFile": "../../.tsbuild/app.tsbuildinfo"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/test-utils/**", "**/__tests__/**"],
  "references": [
    { "path": "../shared" },
    { "path": "../entities" },
    { "path": "../features" },
    { "path": "../widgets" }
  ]
}
